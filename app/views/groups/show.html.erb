<% if @group.owner_id == current_user.id %>
  <%= render "modal", title: "削除しますか？" do %>
    <%= button_to "削除する", group_path(@group), method: :delete, data: { turbo: false }, class: "btn btn-outline-success" %>
  <% end %>
<% else %>
  <%= render "modal", title: "脱退しますか？" do %>
    <%= button_to "脱退する", group_exit_path(@group), method: :delete, data: { turbo: false }, class: "btn btn-outline-success" %>
  <% end %>
<% end %>
