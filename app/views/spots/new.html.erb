<%= form_with model: @spot, url: group_trip_spots_path, local: true do |f| %> 
  <div class="FormCountainer">
    <h2 class="NewTitle">スポット作成<h2>
    <%= f.label :旅行日 %>
    <%= @trip_dates %>
    <%= f.hidden_field :date, value: @trip_dates %>
    <div class="FormTitle"> <%= f.label :スポット作成 %> </br> <%= f.text_field :name %> </div>
    <div> <%= f.label :開始時間 %> </br> <%= f.time_field :start_time %> </div>
    <div> <%= f.label :終了時間 %> </br> <%= f.time_field :end_time %> </div>
  </div>
  <div> <%= f.submit "保存" %> </div>
  <%= link_to "キャンセル", request.referer, class: "cancel_button" %>
<% end %>
