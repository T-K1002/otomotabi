<% content_for :js do %>
  <%= javascript_import_module_tag "svgmap" %>
<% end %>
<div id="my-map-container"></div>

<section class="py-5 text-center container">
  <div class="row py-lg-1">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Travel list</h1>
      <p class="lead text-body-secondary"><%= @group.name %></p>
      <p>
      <%= link_to "新しく旅行計画を立てる", new_group_trip_path, class: "btn btn-sm btn-outline-secondary" %>
      </p>
    </div>
  </div>
</section>

<div class="album py-5 bg-body-tertiary">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @trips.each do |trip| %>
        <div class="col">
          <div class="card shadow-sm">
            <% if trip.image.attached? %>
              <%= image_tag trip.image, height: "225" %>
            <% else %>
              <%= image_tag "trip_no-image.png", width: "100%", height: "225" %>
            <% end %>
            <div class="card-body">
              <p class="card-text"><%= trip.title %></p>
              <p class="card-text"><%= trip.prefecture %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to "計画を立てる", group_trip_spots_path(@group,trip), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to "編集", edit_group_trip_path(@group,trip), class: "btn btn-sm btn-outline-secondary" %>
                </div>
                <small class="text-body-secondary"><%= trip.start_date %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/gh/ka215/svg-japan@main/dist/svg-japan.min.js"></script>
